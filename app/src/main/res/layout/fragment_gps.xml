<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_gps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yu.login.BlankFragment">
    <!--android:background=""-->
    <!-- Layout for privacy settings -->

    <!-- Frames the images-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <!--app:srcCompat="@drawable/icon_reliability"-->
    <!-- Toggles GPS on and off -->
    <!-- TODO: notify the user when GPS is off (push notification?) -->
    <ToggleButton
        android:text="GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textOn="GPS ON"
        android:textOff="GPS OFF"
        android:id="@+id/gpsButton" />

    <Button
        android:id="@+id/add_geofences_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gpsButton"
        android:layout_centerHorizontal="true"
        android:onClick="addGeofencesButtonHandler"
        android:text="Add GeoFences" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Coordinates: "
        android:id="@+id/textView"
        android:layout_marginBottom="84dp"
        android:layout_alignBottom="@+id/gpsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Total Distance:"
        android:id="@+id/distance"
        android:layout_alignBottom="@+id/gpsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />
    <!-- TODO: shouldn't be using hardcode strings. -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Speed:"
        android:id="@+id/speed"
        android:layout_below="@+id/distance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />
</RelativeLayout>
